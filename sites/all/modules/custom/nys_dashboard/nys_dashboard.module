}


function nys_dashboard_render_bill_status($bill_to_load, $draw_classes = '') {
  // Load the bill.
  $bill = node_load($bill_to_load);

  // If the bill is substituted, load the new bill instead.
  if (!empty($bill->field_ol_substituted_by[LANGUAGE_NONE][0]['value'])) {
    $sub_bill_base_print_no = $bill->field_ol_substituted_by[LANGUAGE_NONE][0]['value'];
    $sub_bill_versions = nys_bills_get_bill_versions($bill->type, $sub_bill_base_print_no, $bill->field_ol_session[LANGUAGE_NONE][0]['value']);
    if (!empty($sub_bill_versions)) {
      $bill = node_load(end($sub_bill_versions)['nid']);
    }
  }

  // Verify the node type.
  if ($bill->type != 'bill') {
    return new stdClass();
  }

  // Note the bill's chamber for later.
  $chamber = $bill->field_ol_chamber[LANGUAGE_NONE][0]['value'] ?: 'none';

  // This array is for iterating the known status points.
  $frontend_statuses = [
    0 => ['display' => 'Introduced', 'passed' => false,],
    1 => ['display' => 'In Committee', 'passed' => false,],
    2 => ['display' => 'On Floor Calendar', 'passed' => false,],
    3 => [
      'senate' => ['display' => 'Passed Senate', 'passed' => false,],
      'assembly' => ['display' => 'Passed Assembly', 'passed' => false,],
    ],
    4 => ['display' => 'Delivered to Governor', 'passed' => false,],
    5 => ['display' => 'Signed/Vetoed by Governor', 'passed' => false,],
  ];

  // Mapping from OpenLeg status names to display text and index.
  $backend_statuses_to_values = [
    "INTRODUCED"       => ['index' => 0,  'display' => 'Introduced',],
    "IN_ASSEMBLY_COMM" => ['index' => 1,  'display' => 'In Assembly Committee',],
    "IN_SENATE_COMM"   => ['index' => 1,  'display' => 'In Senate Committee',],
    "ASSEMBLY_FLOOR"   => ['index' => 2,  'display' => 'On Floor Calendar',],
    "SENATE_FLOOR"     => ['index' => 2,  'display' => 'On Floor Calendar',],
    "PASSED_ASSEMBLY"  => ['index' => 3,  'display' => 'Passed Assembly',],
    "PASSED_SENATE"    => ['index' => 3,  'display' => 'Passed Senate',],
    "DELIVERED_TO_GOV" => ['index' => 4,  'display' => 'Delivered to Governor',],
    "SIGNED_BY_GOV"    => ['index' => 5,  'display' => 'Signed by Governor',],
    "VETOED"           => ['index' => 5,  'display' => 'Vetoed by Governor',],
    "STRICKEN"         => ['index' => -1, 'display' => 'Stricken',],
    "LOST"             => ['index' => -1, 'display' => 'Lost',],
    "SUBSTITUTED"      => ['index' => -1, 'display' => 'Substituted',],
    "ADOPTED"          => ['index' => -1, 'display' => 'Adopted',],
  ];

  // Get the current status name and map it.
  $current_status_name = $bill->field_ol_last_status[LANGUAGE_NONE][0]['value'] ?: '';
  $current_status = $backend_statuses_to_values[$current_status_name] ?: ['index'=>-1,'display'=>'Unknown Status'];

  // Tailor the display of "Signed" or "Vetoed" according to current status.
  if ($current_status['index'] == 5) {
    $frontend_statuses[5]["display"] = $current_status['display'];
  }


  // If the bill has passed it's house's floor vote and gone back to the other
  // houses committee, show the last status as passing the bill's house.
  if (in_array($current_status['index'], [1,2])) {
    $search_chamber = 'PASSED_' . strtoupper($chamber);
    if (strrpos($bill->field_ol_all_statuses[LANGUAGE_NONE][0]['value'], $search_chamber)) {
      $current_status_name = $search_chamber;
      $current_status = $backend_statuses_to_values[$current_status_name];
    }
  }

  // Special display for committees in the Senate.
  $committee = $bill->field_ol_latest_status_committee[LANGUAGE_NONE][0]['value'] ?? '';
  if ($current_status_name == 'IN_SENATE_COMM' && $committee) {
    $current_status['display'] = '<span>' . $current_status['display'] .
      '&nbsp;<a class="committee-link" href="/committees/' .
      strtolower(str_replace([',', ' '], ['', '-'], $committee)) .
      '">' . $committee . '&nbsp;Committee</a></span>';
  }

  // If a bill has passed both houses, update the display text.
  if (
    ($current_status_name == 'PASSED_ASSEMBLY' && $chamber == 'senate') ||
    ($current_status_name == 'PASSED_SENATE' && $chamber == 'assembly')
  ) {
    $current_status['display'] = 'Passed Senate &amp; Assembly';
  }

  // Set the passing flag for each of the front-end entries
  foreach ($frontend_statuses as $index => $item) {
    // There is special logic for passing assembly/senate.
    if ($index == 3) {
      if ($current_status['index'] == 3) {
        $test_chamber = strtolower(str_replace('PASSED_', '', $current_status_name));
        $frontend_statuses[3][$chamber]['passed'] = true;
        if ($test_chamber != $chamber) {
          $frontend_statuses[3][$test_chamber]['passed'] = true;
        }
      }
      else {
        $frontend_statuses[3]['senate']['passed'] = ($current_status['index'] > $index);
        $frontend_statuses[3]['assembly']['passed'] = ($current_status['index'] > $index);
      }
    }
    else {
      $frontend_statuses[$index]['passed'] = ($current_status['index'] >= $index);
    }
  }

  // Set the variables for theming.
  $status_info = array(
    'frontend_statuses' => $frontend_statuses,
    'draw_classes' => $draw_classes,
  );

  // Theme the graph, and return the results.
  $result = new stdClass();
  $result->graph_html = theme('nys_blocks_bill_status', $status_info);
  $result->display_status = $current_status['display'];

  return $result;
}
