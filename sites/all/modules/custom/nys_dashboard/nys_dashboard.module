/**
 * Searches for a count of how many users have used a particular flag across
 * all entities.  For example, searching for 'follow_issue' will return a
 * recordset of all issues and a count of users which have flagged them.
 * The users are filtered by the district of the senator parameter, which
 * should be a user ID.  If none it passed, it is read from arg(1).
 *
 * By default, entities with zero flags are excluded from the results.
 *
 * @param string $flag_name Machine name of the flag being searched
 * @param int $senator_uid UID of the senator being searched, defaults to arg(1)
 * @param boolean $include_empty If the results should include entries with no flags
 *
 * @return string
 */
function _nys_dashboard_query_flag_counts($flag_name, $senator_uid = 0, $include_empty = FALSE) {

  // '144906'
  if (!((int) $senator_uid)) {
    $senator_uid = (int) arg(1);
  }
  if (!($senator_uid && $flag_name)) {
    return NULL;
  }

  $join_type = $include_empty ? 'LEFT' : 'INNER';

  $subquery = "SELECT f.entity_id AS issue_tid,
      COUNT(sen_user_id.field_user_account_target_id) AS user_count
    FROM
      users fl_u
      INNER JOIN flagging f
        ON fl_u.uid = f.uid
      INNER JOIN flag
        ON f.fid=flag.fid AND flag.entity_type=f.entity_type
      INNER JOIN field_data_field_district fl_u_dist
        ON fl_u.uid = fl_u_dist.entity_id
        AND fl_u_dist.entity_type = :user_term
        AND fl_u_dist.deleted = 0
      INNER JOIN taxonomy_term_data td_fl_u_dist
        ON fl_u_dist.field_district_target_id = td_fl_u_dist.tid
        AND td_fl_u_dist.vid = 8
      INNER JOIN field_data_field_senator td_fl_u_dist_senator
        ON td_fl_u_dist.tid = td_fl_u_dist_senator.entity_id
        AND td_fl_u_dist_senator.entity_type = :tax_term
        AND td_fl_u_dist_senator.deleted = 0
      INNER JOIN node td_fl_u_dist_senator_nid
        ON td_fl_u_dist_senator.field_senator_target_id = td_fl_u_dist_senator_nid.nid
        AND td_fl_u_dist_senator_nid.`type` = :sen_term
      INNER JOIN field_data_field_user_account sen_user_id
        ON td_fl_u_dist_senator_nid.nid = sen_user_id.entity_id
        AND sen_user_id.entity_type = :node_term
        AND sen_user_id.deleted = 0
    WHERE
      sen_user_id.field_user_account_target_id = :target_id
      AND flag.name = :flag_name
	  GROUP BY f.entity_id";

  $query = "SELECT td.tid, td.name, sub.user_count FROM taxonomy_term_data td 
    INNER JOIN taxonomy_vocabulary tv ON td.vid=tv.vid $join_type JOIN (
    $subquery) sub ON sub.issue_tid=td.tid ORDER BY name";
  $args = [
    ':tax_term' => 'taxonomy_term',
    ':user_term' => 'user',
    ':sen_term' => 'senator',
    ':node_term' => 'node',
    ':target_id' => $senator_uid,
    ':flag_name' => $flag_name,
  ];

  return db_query($query, $args)->fetchAllAssoc('tid');

}

