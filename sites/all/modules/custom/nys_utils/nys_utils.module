/**
 * Helper function to get a role id by role name.
 *
 * @param string $role_name
 *   The name of the role to check for.
 *
 * @return int|null
 *   Returns the role id if it's found, NULL if not.
 */
function _nys_utils_get_rid_by_name($role_name) {
  $role_name_hash = drupal_hash_base64($role_name);
  $roles = &drupal_static(__FUNCTION__);

  if (!isset($roles[$role_name_hash])) {
    $role = user_role_load_by_name($role_name);
    $roles[$role_name_hash] = isset($role->rid)
      ? $role->rid
      : NULL;
  }

  return $roles[$role_name_hash];
}

/**
 * Checks a user account for membership in a role, provided by name.
 * This is simply a wrapper around user_has_role().  The uid parameter
 * can be a user object or integer user ID.  If nothing is passed,
 * the current user is assumed.
 *
 * @param string $role_name Name of role
 * @param ?object|int $uid User object or integer user id
 *
 * @return bool
 */
function nys_utils_user_has_role_name($role_name, $uid = NULL) {
  $rid = _nys_utils_get_rid_by_name($role_name);
  // If a NULL was passed for account, use the global user.
  if (is_null($uid)) {
    $account = $GLOBALS['user'];
  }
  // If a numeric value was passed, try to load that user.
  elseif (is_numeric($uid)) {
    $account = user_load($uid);
  }
  return isset($account->roles) ? user_has_role($rid, $account) : FALSE;
}

/**
