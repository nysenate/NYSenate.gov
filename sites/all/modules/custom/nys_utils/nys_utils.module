function nys_utils_set_cron_lastrun($type) {
  if ((string) $type) {
    $date = date("Y-m-d H:i:s");
    variable_set(nys_utils_get_cron_var_name($type), $date);
  }
}

function nys_utils_get_base_url() {
  global $base_url;
  return (($_ENV['PANTHEON_ENVIRONMENT'] ?? FALSE) === "live") ? 'https://www.nysenate.gov' : $base_url;
}

/**
 * Sandbox mode for SendGrid requests is desired if:
 * - a Pantheon environment is not found,
 * - OR the Pantheon environment is not "live",
 * - OR rerouting is not enabled.
 *
 * @return bool
 */
function nys_utils_detect_sendgrid_sandbox() {
  $is_live    = defined('PANTHEON_ENVIRONMENT') && PANTHEON_ENVIRONMENT == 'live';
  $is_reroute = nys_utils_detect_mail_rerouting();

  return (!($is_live || $is_reroute));
}

/**
 * Detect if mail rerouting has been enabled.
 *
 * @return bool
 */
function nys_utils_detect_mail_rerouting() {
  return variable_get('reroute_email_enable', 0)
    && valid_email_address(variable_get('reroute_email_address', ''));
}

/**
 * Implements hook_nys_sendgrid_format_alter().
 *
 * This is only needed for nys_sendgrid mail objects.
 * 1. Adds subject and body substitutions to support dynamic templates,
 * 2. Adds global substitutions for site URLs,
 * 3. Configures global tracking settings,
 * 4. Enables sandbox mode in non-prod environments.
 *
 * Sets up default-on tracking for SendGrid outbound.  This behavior can be
 * suppressed by setting the "suppress_tracking" key to TRUE in the message
 * params.  For GA, the keys "GA_CampaignName" and "GA_CampaignContent" are
 * used to customize those respective properties.
 *
 * @param $message array Drupal message array.
 */
function nys_utils_nys_sendgrid_format_alter(&$message) {
  // Easy reference.
  /* @var $sgm \SendGrid\Mail\Mail */
  $sgm = &$message['params']['sendgrid_mail'];

  // Get the assigned template ID.  If one is not assigned, the property
  // will be NULL.  If it is assigned, the property will yield *another*
  // object, which must also be called.  This lib is a little screwy...
  $template_id = $sgm->getTemplateId();
  $template_id = ($template_id instanceof SendGrid\Mail\TemplateId)
    ? $template_id->getTemplateId()
    : NULL;

  // Detect if the template is dynamic, and if substitutions are needed.
  $autopop = variable_get('nys_sendgrid_content_substitution', FALSE)
    && nys_sendgrid_is_template_dynamic($template_id);

  // If body/subject substitutions are needed, find the "proper" content.
  // We prefer the first HTML content, falling back to the first TEXT content.
  $subj_token = variable_get('nys_sendgrid_content_token_subject', 'subject');
  $body_token = variable_get('nys_sendgrid_content_token_body', 'body');
  $body_content = FALSE;
  if ($autopop) {
    $text_content = FALSE;
    foreach ($sgm->getContents() as $val) {
      if ($val->getType() == Sendgrid\Mail\MimeType::HTML && !$body_content) {
        $body_content = $val->getValue();
      }
      if ($val->getType() == Sendgrid\Mail\MimeType::TEXT && !$text_content) {
        $text_content = $val->getValue();
      }
    }
    if (!$body_content && $text_content) {
      $body_content = $text_content;
    }
  }

  // Add the legacy and handlebar versions of the home URL, and the
  // body/subject substitutions, if necessary.
  foreach (($sgm->getPersonalizations() ?? []) as $key=>$val) {
    $val->addSubstitution('%instance_url%', nys_utils_get_base_url());
    $val->addSubstitution('instanceUrl', nys_utils_get_base_url());
    if ($autopop) {
      $subj_content = $val->getSubject() ?: $sgm->getGlobalSubject();
      $subj_content = ($subj_content instanceof SendGrid\Mail\Subject)
        ? $subj_content->getSubject()
        : '';
      $val->addSubstitution($body_token, (string) $body_content);
      $val->addSubstitution($subj_token, (string) $subj_content);
    }
  }

  // Set up tracking, if not suppressed.
  if (!($message['params']['suppress_tracking'] ?? FALSE)) {
    try {
      // Google Analytics Tracking
      $g_analytics = new SendGrid\Mail\Ganalytics();
      $g_analytics->setEnable(TRUE);
      $g_analytics->setCampaignMedium('email');
      $g_analytics->setCampaignSource('ny_state_senate');
      if ($t_name = ($message['params']['GA_CampaignName'] ?? FALSE)) {
        $g_analytics->setCampaignName($t_name);
      }
      if ($t_event = ($message['params']['GA_CampaignContent'] ?? FALSE)) {
        $g_analytics->setCampaignContent($t_event);
      }

      // Enable Email Open Tracking
      $open_tracking = new SendGrid\Mail\OpenTracking();
      $open_tracking->setEnable(TRUE);

      // Enable Email Click Tracking
      $click_tracking = new SendGrid\Mail\ClickTracking();
      $click_tracking->setEnable(TRUE);
      $click_tracking->setEnableText(TRUE);

      // Prepare Track Settings Object
      $alert_tracking = new SendGrid\Mail\TrackingSettings(
        $click_tracking,
        $open_tracking,
        NULL,
        $g_analytics
      );

      $sgm->setTrackingSettings($alert_tracking);
    }
    catch (Exception $e) {
      watchdog(
        'nys_utils',
        'Could not set tracking options on an email! (id=%id, excp=%excp)',
        ['%id' => $message['id'], '%excp' => $e->getMessage()],
        WATCHDOG_WARNING
      );
    }
  }

  // Set sandbox mode if not on prod, and no rerouting is detected.
  if (nys_utils_detect_sendgrid_sandbox()) {
    watchdog('nys_utils', 'SendGrid sandboxing engaged');
    drupal_set_message('Email Sandboxing through SendGrid is engaged.  Configure mail rerouting to disengage sandbox.', 'warning');
    $sgm->enableSandBoxMode();
  }
}

